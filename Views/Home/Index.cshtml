@{
    Layout = "_Layout";
}

@model B13_MS_School.Models.List


<div class="container">
    <br />
    <center><img height="200" src="~/images/logo.jpg" /></center>
    <br />
    <div class="hero-image">
        <h1 style="background-color:rgb(182, 255, 0); text-align:center">MS High School</h1>
    </div>
    <div>
        @ViewBag.Login
    </div>
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Index" asp-controller="Home" method="post">
                <div class="form-group">
                    <label for="email">Email:</label>
                    <input asp-for="Email" class="form-control" placeholder="Enter Email">
                </div>
                <div class="form-group">
                    <label for="pwd">Password:</label>
                    <input type="password" name="password" asp-for="Password" class="form-control" placeholder="Enter Password">
                </div>


                <div class="checkbox">
                    <label><input type="checkbox" name="remember"> Remember me</label>
                </div>

                <input type="submit" class="btn btn-default" value="Login" />
            </form>
        </div>
    </div>
</div>

