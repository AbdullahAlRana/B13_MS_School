@{
    Layout = "RegistrarLayout";
}

@model B13_MS_School.Models.Student

<div class="row">
    <div class="col-md-4">
        <form asp-controller="Registrar" asp-action="AddStudent" method="post">

            <div class="text-success"><center><h3>@ViewBag.Success</h3></center></div>
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ID"></label>
                <input asp-for="ID" class="form-control" />
                <span asp-validation-for="ID" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="FirstName"></label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div><div class="form-group">
                <label asp-for="LastName"></label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="PresentAddress"></label>
                <input asp-for="PresentAddress" class="form-control" />
                <span asp-validation-for="PresentAddress" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="PreAddress"></label>
                <input asp-for="PreAddress" class="form-control" />
                <span asp-validation-for="PreAddress" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="AdmissionDate"></label>
                <input asp-for="AdmissionDate" class="form-control" />
                <span asp-validation-for="AdmissionDate" class="text-danger"></span>
            </div>

            <div>
                <input type="submit" class="btn btn-primary btn-block" vlaue="Save" />
            </div>

        </form>
    </div>
</div>